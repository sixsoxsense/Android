<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/baseLayout"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:id="@+id/button1" android:text="배경색 버튼"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:id="@+id/button2" android:text="버튼 변경"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/Toast1" android:text="토스트 출력"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/talkBox" android:text="대화상자"/>
</LinearLayout>