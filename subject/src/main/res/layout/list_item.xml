<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/listName" android:text="성명" android:layout_margin="10dp"
              android:textColor="#005500"
    />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/listPhone" android:text="전화번호"
                  android:layout_margin="5dp" android:textColor="#550000"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/listAddress" android:text="주소"
                  android:layout_margin="5dp" android:textColor="#000000"
        />
    </LinearLayout>


</LinearLayout>