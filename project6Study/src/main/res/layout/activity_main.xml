<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <AnalogClock android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <DigitalClock android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
                  android:textSize="30sp" android:background="#00FF00"/>
    <TextClock android:layout_width="match_parent" android:layout_height="wrap_content"
               android:format24Hour="hh:mm:ss a"
               android:gravity="center" android:textSize="30sp"/>
    <DatePicker android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>